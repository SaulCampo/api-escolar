{
  "openapi": "3.0.3",
  "info": {
    "title": "API Escolar",
    "version": "1.0.0",
    "description": "API REST Escolar con CRUD de estudiantes, b\u00fasqueda, filtros, paginaci\u00f3n y ordenamiento."
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "paths": {
    "/api/estudiantes": {
      "get": {
        "summary": "Listar estudiantes (b\u00fasqueda, filtros, paginaci\u00f3n, sort)",
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "schema": {
              "type": "string"
            },
            "description": "B\u00fasqueda por texto (nombres, apellidos, c\u00e9dula, materias)"
          },
          {
            "name": "curso",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "minProm",
            "in": "query",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "maxProm",
            "in": "query",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 10
            }
          },
          {
            "name": "sort",
            "in": "query",
            "schema": {
              "type": "string",
              "default": "-createdAt"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "page": {
                      "type": "integer"
                    },
                    "limit": {
                      "type": "integer"
                    },
                    "total": {
                      "type": "integer"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Estudiante"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Crear estudiante",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Estudiante"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Creado"
          }
        }
      }
    },
    "/api/estudiantes/{id}": {
      "get": {
        "summary": "Detalle estudiante",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "put": {
        "summary": "Actualizar estudiante",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Estudiante"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Actualizado"
          }
        }
      },
      "delete": {
        "summary": "Eliminar estudiante",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Eliminado"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Estudiante": {
        "type": "object",
        "properties": {
          "cedula": {
            "type": "string"
          },
          "nombres": {
            "type": "string"
          },
          "apellidos": {
            "type": "string"
          },
          "curso": {
            "type": "string"
          },
          "promedio": {
            "type": "number"
          },
          "materias": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "required": [
          "cedula",
          "nombres",
          "apellidos",
          "curso"
        ]
      }
    }
  }
}